{
    "id":"itemSelectionList",
    "version": "1.0.0",
    "type": "SelectionList",
    "configuration": {
    	"header": {
    		"title": "@apaf.page.roles.selection.title",
    		"showFilter": true
    	},
    	"datasource": {
            "type": "managed",
            "manager": "roleManager"
        },
        "renderer": {
        	"type": "FieldItemRenderer",
        	"processor": "'<span><img src=\"/uiTools/img/silk/lock.png\">&nbsp;'+@.name+'</span>'"
        },
        "sorter": {
        	"type": "FieldItemSorter",
        	"field": "name",
        	"ascending": false
        },
        "constraints": {
        	"height": {
        		"processor": "$('#workArea').height()-40"
        	}
        } 
    }
}