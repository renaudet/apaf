{
    "id":"workflowEditForm",
    "version": "1.0.0",
    "type": "Form",
    "configuration": {
    	"title": "@apaf.page.workflow.form.title",
    	"class": "form-frame-noborder",
    	"fields": [
    		{
    			"name": "name",
    			"label": "@apaf.workflow.datatype.name",
    			"required": true,
    			"size": 4
    		},
    		{
    			"name": "description",
    			"label": "@apaf.workflow.datatype.description",
    			"size": 9
    		},
    		{
    			"name": "version",
    			"label": "@apaf.workflow.datatype.version",
    			"required": true,
    			"size": 2
    		},
    		{
    			"name": "serverSide",
    			"label": "@apaf.workflow.datatype.serverSide",
    			"type": "switch",
    			"help": "@apaf.workflow.datatype.serverSide.help"
    		},
    		{
    			"name": "loggingEnabled",
    			"label": "@apaf.workflow.datatype.log.enabled",
    			"type": "switch",
    			"default": false
    		},
    		{
    			"name": "timeoutEnabled",
    			"label": "@apaf.workflow.datatype.timeout.enabled",
    			"type": "switch",
    			"default": true
    		},
    		{
    			"name": "documentation",
    			"label": "@apaf.workflow.datatype.doc",
    			"type": "textarea",
    			"rows": 5,
    			"size": 9
    		}
    	]
    }
}